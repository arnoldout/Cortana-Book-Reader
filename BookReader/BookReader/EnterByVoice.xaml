<Page
    x:Class="BookReader.EnterByVoice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookReader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#8155A4">
        <TextBlock VerticalAlignment="Center" x:Name="txtNowReading" FontSize="26" TextWrapping="Wrap"  TextAlignment="Center" HorizontalAlignment="Center"/>
        <Button Content="Go to Library" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Click="Button_Click"/>
        <MediaElement MediaOpened="media_MediaOpened" x:Name="media"/> 
    </Grid>
</Page>
